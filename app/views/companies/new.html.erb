<div class="d-flex align-items-center justify-content-center" style="height: 70vh">
  <div class="card" style="width: 20rem;" >
    <div class="card border-dark shadow-sm">
     <div class="card-body">
     <h2 class="card-title">Company </h2>
 
<%= bootstrap_form_with model: @company, data: { turbo: false } do |form| %>
  <div>
   
    <%= form.text_field :name %>
  
   
  </div>

  <div>
  
    <%= form.text_area :address  %><br>
   
  </div>

  <div>
 
  <%= form.text_field :no_of_employee %>
 
</div>

  <div>

      <%= form.file_field :image, class: "col-auto", required: true %><br>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
          
</div>

      </div>
     </div>
   </div>
 </div>  


